<?php namespace qnd; /** @var callable $§ */?>
<section id="<?=$§('§')['id'];?>" class="<?= $§('context');?>">
    <h1><?=$§('title');?></h1>
<?php if ($§('data')):?>
    <?= §('search');?>
    <?= §('pager');?>
    <?php foreach ($§('data') as $id => $item):?>
        <?php if (!allowed($item['_entity']['uid'] . '.' . $§('context'))) continue;?>
    <article>
        <?php foreach ($§('attr') as $attr):?>
            <?php $attr['context'] = $§('context');?>
            <?php if (!$html = viewer($attr, $item)) continue;?>
            <?php if ($attr['uid'] === 'name'):?>
                <?php if (allowed($item['_entity']['uid'] . '.view')):?>
        <h1><a href="<?= url($item['_entity']['uid'] . '/view/' . $id);?>"><?=$html;?></a></h1>
                <?php else:?>
        <h1><?=$html;?></h1>
                <?php endif;?>
            <?php else:?>
        <div data-attr="<?=$attr['uid'];?>">
            <?=$html;?>
        </div>
            <?php endif;?>
        <?php endforeach;?>
    </article>
        <?php endforeach;?>
<?php else:;?>
    <p><?= _('No entries found');?></p>
<?php endif;?>
</section>
