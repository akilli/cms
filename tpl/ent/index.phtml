<?php
namespace app;
use attr;
/** @var callable $§ */
?>
<section id="<?=$§('id');?>" class="index">
    <header>
        <?php if ($§('title')):?>
        <h1><?=$§('title');?></h1>
        <?php endif;?>
        <?php if ($§('create') && allowed($§('ent')['id'] . '/create')):?>
        <p data-act="create"><a href="<?=url($§('ent')['id'] . '/create');?>"><?=i18n('New Entry');?></a></p>
        <?php endif;?>
        <?php if ($§('search')):?>
        <form method="post" class="search">
            <input type="search" name="param[q]" value="<?=$§('q');?>" placeholder="<?=i18n('Search Term');?>" />
            <input type="submit" value="<?=i18n('Search');?>" />
            <input type="hidden" name="token" value="<?=$§('token');?>" />
        </form>
        <?php endif;?>
    </header>
<?php if ($§('data')):?>
    <?php if ($§('head')):?>
    <div class="thead">
        <?php foreach ($§('attr') as $attr):?>
            <a href="<?=url($§('url'), ['sort' => $attr['id'], 'dir' => $§('sort') === $attr['id'] && $§('dir') === 'asc' ? 'desc' : 'asc'], true);?>"<?php if ($§('sort') === $attr['id']):?> data-sort="<?=$§('dir');?>"<?php endif;?>><?=$attr['name'];?></a>
        <?php endforeach;?>
            <span><?=i18n('Actions');?></span>
    </div>
    <?php endif;?>
    <?php foreach ($§('data') as $data):?>
    <article>
        <?php foreach ($§('attr') as $attr):?>
            <?php if (!($html = attr\viewer($attr, $data)) && !$§('head')) continue;?>
            <?php if ($attr['id'] === 'name'):?>
                <?php if ($§('link') && allowed($§('ent')['id'] . '/view')):?>
        <h2 data-attr="<?=$attr['id'];?>" data-type="<?=$attr['type'];?>">
            <a href="<?=$data['url'] ?? url($§('ent')['id'] . '/view/' . $data['id']);?>"><?=$html;?></a>
        </h2>
                <?php else:?>
        <h2 data-attr="<?=$attr['id'];?>" data-type="<?=$attr['type'];?>"><?=$html;?></h2>
                <?php endif;?>
            <?php elseif ($attr['id'] === 'aside'):?>
        <aside data-attr="<?=$attr['id'];?>" data-type="<?=$attr['type'];?>">
            <?=$html;?>
        </aside>
            <?php else:?>
        <div data-attr="<?=$attr['id'];?>" data-type="<?=$attr['type'];?>">
            <?=$html;?>
        </div>
            <?php endif;?>
        <?php endforeach;?>
        <?php if ($§('actions')):?>
        <footer>
            <?php if (in_array('view', $§('actions')) && allowed($§('ent')['id'] . '/view')):?>
            <a href="<?=$data['url'] ?? url($§('ent')['id'] . '/view/' . $data['id']);?>" data-act="view"><?=i18n('View');?></a>
            <?php endif;?>
            <?php if (in_array('edit', $§('actions')) && allowed($§('ent')['id'] . '/edit')):?>
            <a href="<?=url($§('ent')['id'] . '/edit/' . $data['id']);?>" data-act="edit"><?=i18n('Edit');?></a>
            <?php endif;?>
            <?php if (in_array('delete', $§('actions')) && allowed($§('ent')['id'] . '/delete')):?>
            <a href="<?=url($§('ent')['id'] . '/delete/' . $data['id']);?>" data-act="delete"><?=i18n('Delete');?></a>
            <?php endif;?>
            <?php if (in_array('rte', $§('actions'))):?>
            <span data-id="<?=$data['id'];?>" data-url="<?=$data['name'];?>" data-el="<?=$§('el');?>" data-rte="<?=$§('rte');?>" data-act="select"><?=i18n('Select item');?></span>
            <?php endif;?>
        </footer>
        <?php endif;?>
    </article>
        <?php endforeach;?>
        <?php if ($§('pager')):?>
    <nav class="pager">
        <div class="info">
            <?=i18n('%s to %s of %s', $§('min'), $§('max'), $§('size'));?>
        </div>
        <div class="links">
            <?php foreach ($§('pager') as $link):?>
                <?php if (!empty($link['active'])):?>
            <span><?=$link['name'];?></span>
                <?php else:?>
            <a href="<?=$link['url'];?>"><?=$link['name'];?></a>
                <?php endif;?>
            <?php endforeach;?>
        </div>
    </nav>
    <?php endif;?>
<?php else:?>
    <p><?=i18n('No entries found');?></p>
<?php endif;?>
</section>
