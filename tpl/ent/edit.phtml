<?php
namespace app;
use attr;
use session;
/** @var callable $§ */
?>
<?php if ($data = $§('data')):?>
<section id="<?=$§('id');?>">
    <h1><?=$§('title');?></h1>
    <form method="post" enctype="multipart/form-data">
        <fieldset>
            <legend><?=$data['name'] ?? i18n('New Entry');?></legend>
            <?php foreach ($§('attr') as $attr):?>
                <?php if (!$html = attr\frontend($data, $attr)) continue;?>
            <div data-attr="<?=$attr['id'];?>">
                <?=$html;?>
            </div>
            <?php endforeach;?>
        </fieldset>
        <?php if (allowed('*/admin')):?>
        <a role="button" href="<?= url('*/admin');?>"><?= i18n('Back');?></a>
        <?php endif;?>
        <input type="submit" value="<?= i18n('Save');?>" />
        <input type="hidden" name="token" value="<?= session\token();?>" />
    </form>
</section>
<?php endif;?>
