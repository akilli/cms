<?php
namespace app;
use attr;
use session;
/** @var callable $var */
?>
<section class="block block-form">
    <?php if ($var('title')):?>
    <h1><?=$var('title');?></h1>
    <?php endif;?>
    <form method="post"<?php if ($var('file')):?> enctype="multipart/form-data"<?php endif;?>>
        <fieldset>
            <?php foreach ($var('attr') as $attrId):?>
            <?php if (!($attr = $var('entity')['attr'][$attrId] ?? null)) continue;?>
            <div data-attr="<?=$attr['id'];?>" data-type="<?=$attr['type'];?>">
                <?=attr\frontend($var('data'), $attr);?>
            </div>
            <?php endforeach;?>
        </fieldset>
        <input type="submit" value="<?=i18n('Submit');?>" />
        <input type="hidden" name="token" value="<?=session\token();?>" />
    </form>
</section>
