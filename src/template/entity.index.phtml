<?php namespace akilli; /** @var array $block */?>
<section class="block block-index">
    <header>
        <h1><?=$block['data']('header');?></h1>
        <div class="tools cf">
            <?= view_render('entity.index.create');?>
            <?= view_render('entity.index.search');?>
        </div>
        <?= view_render('pager');?>
    </header>
    <?php if ($block['data']('data')):?>
    <form action="<?= url('*/*');?>" method="post" class="index">
        <fieldset class="data">
            <table>
                <thead>
                    <tr>
                        <th data-type="bool.checkbox">
                            <input type="checkbox" name="gui[checkall]" value="1" title="<?= _('Select all');?>" />
                        </th>
                        <?php foreach ($block['data']('attributes') as $code => $attribute):?>
                        <th data-type="<?=$attribute['backend'];?>.<?=$attribute['frontend'];?>">
                            <a href="<?=$attribute['url'];?>"><?= _($attribute['name']);?></a>
                        </th>
                        <?php endforeach;?>
                        <?php if (allowed('edit')):?>
                        <th data-type="bool.checkbox">
                            <?= _('Edit');?>
                        </th>
                        <?php endif;?>
                        <?php if (allowed('view')):?>
                        <th data-type="bool.checkbox">
                            <?= _('View');?>
                        </th>
                        <?php endif;?>
                    </tr>
                </thead>
                <tbody>
                    <?php foreach ($block['data']('data') as $id => $item):?>
                    <tr>
                        <td>
                            <input id="data-<?=$id;?>-name" type="checkbox" name="data[<?=$id;?>]" value="1" />
                        </td>
                        <?php foreach ($block['data']('attributes') as $code => $attribute):?>
                            <?php $attribute['action'] = 'index';?>
                        <td>
                            <?=$attribute['view']($attribute, $item);?>
                        </td>
                        <?php endforeach;?>
                        <?php if (allowed('edit')):?>
                        <td>
                            <a href="<?= url('*/edit', ['id' => $id]);?>" title="<?= _('Edit this item');?>"><?= _('Edit');?></a>
                        </td>
                        <?php endif;?>
                        <?php if (allowed('view')):?>
                        <td>
                            <a href="<?= url('*/view', ['id' => $id]);?>" title="<?= _('View this item');?>"><?= _('View');?></a>
                        </td>
                        <?php endif;?>
                    </tr>
                    <?php endforeach;?>
                </tbody>
            </table>
        </fieldset>
        <?php if (allowed('delete') || allowed('edit')):?>
        <fieldset class="action">
            <?php if (allowed('delete')):?>
            <input type="submit" name="action[delete]" title="<?= _('Delete');?>" value="<?= _('Delete');?>" formaction="<?= url('*/delete');?>" />
            <?php endif;?>
            <?php if (allowed('edit')):?>
            <input type="submit" name="action[edit]" title="<?= _('Edit');?>" value="<?= _('Edit');?>" formaction="<?= url('*/edit');?>" />
            <?php endif;?>
            <input type="hidden" name="token" value="<?= token();?>" />
        </fieldset>
        <?php endif;?>
    </form>
    <?php else:;?>
    <p><?= _('Nothing created yet');?></p>
    <?php endif;?>
</section>
